<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <ImageView
        android:id="@+id/imagenCobro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:contentDescription="@string/strTemporal"
        android:visibility="gone"
        
     />

    <TextView
        android:id="@+id/cobros_linea0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/cobros_linea1"
        android:textSize="12sp" 
		android:textColor="#000000" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_toRightOf ="@+id/cobros_linea0"
		/>
		<!-- android:layout_toRightOf="@id/imagenCobro" -->
        

    <TextView
        android:id="@+id/cobros_linea1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="12sp" 
        android:layout_below="@id/cobros_linea1"
		android:layout_toRightOf ="@+id/cobros_linea0"
        />

    <TextView
        android:id="@+id/cobros_linea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="12sp" 
        android:layout_below="@id/cobros_linea1_1"
		android:layout_toRightOf ="@+id/cobros_linea0"
       />

    <TextView
        android:id="@+id/cobros_linea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cobros_linea2"
        android:layout_toRightOf ="@+id/cobros_linea0"
        android:textColor="#000000"
        android:textSize="12sp"
       />

</RelativeLayout>
