<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radialback_new_contract"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobilcoban.app.NuevoCredActivity" >

    <ScrollView
        android:id="@+id/scrNuevoContrato"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="394dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txtNombresCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblNombresCl"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#000000" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtApellidosC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblApellidos"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txtIdentificacionCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblIdentificacionC"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txtFechaNacCl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/strlblFechaNacCl"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtDireccionCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblDireccionCl"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txtTelefonoCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblTelefono"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/txtMontoPrestamoCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/strlblMontoPrestamoCl"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/lblPeriodoCobroCl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strlblPeriodoCobro"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spnPeriodoCobro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/lblCuotasNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strlblNumCuotaCl"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spnCuotasPrest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:clipChildren="true"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEnvSolCred"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrNuevoContrato"
        android:layout_below="@+id/scrNuevoContrato"
        android:background="@drawable/btnfondogreen"
        android:drawableTop="@drawable/ic_send_approval"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/strbtnEnvSolCred" />

    <Button
        android:id="@+id/btnCerrar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancelSolCred"
        android:layout_alignBottom="@+id/btnCancelSolCred"
        android:layout_alignRight="@+id/scrNuevoContrato"
        android:background="@drawable/btnfondored"
        android:drawableTop="@drawable/ic_close"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/strbtnCerrar" />

    <Button
        android:id="@+id/btnCancelSolCred"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrNuevoContrato"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnfondoyellow"
        android:drawableTop="@drawable/ic_cancel_approval"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/strbtnCancelSolCred"
        android:textColor="#000" />

</RelativeLayout>